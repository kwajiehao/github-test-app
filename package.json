{
  "name": "my-first-app",
  "version": "1.0.0",
  "description": "A basic Github app built with Probot",
  "author": "kwajiehao <jie_hao_kwa@alumni.brown.edu>",
  "license": "ISC",
  "repository": "https://github.com//basic-probot.git",
  "homepage": "https://github.com//basic-probot",
  "bugs": "https://github.com//basic-probot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nock": "^10.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.1.0",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
